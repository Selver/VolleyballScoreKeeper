<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#40C4FF</item>
    </style>

    <style name="scrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/volleyball_background1</item>
    </style>

    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewStyle1">
        <item name="android:layout_width">@dimen/dimen148</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimen16</item>
        <item name="android:layout_marginTop">@dimen/dimen24</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dimen12</item>
        <item name="android:paddingTop">@dimen/dimen12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size42</item>
    </style>

    <style name="textViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen2</item>
        <item name="android:layout_marginLeft">@dimen/dimen170</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size20</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonStyle1">
        <item name="android:layout_width">@dimen/dimen30</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/plus</item>
    </style>

        <style name="scoreViewStyle">
            <item name="android:layout_width">@dimen/dimen100</item>
            <item name="android:layout_height">@dimen/dimen120</item>
            <item name="android:background">@color/tintedBlack</item>
            <item name="android:fontFamily">sans-serif-light</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/size42</item>
            <item name="android:text">@string/_0</item>
        </style>

<style name="setsWonScoreView">
    <item name="android:layout_width">@dimen/dimen40</item>
    <item name="android:layout_height">@dimen/dimen60</item>
    <item name="android:background">@color/yellow</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center</item>
    <item name="android:text">@string/_0</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/size24</item>
</style>

    <style name="buttonStyle2">
        <item name="android:layout_width">@dimen/dimen40</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">@dimen/size18</item>
    </style>

<style name="cardScoreViewStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/yellow</item>
    <item name="android:padding">@dimen/dimen8</item>
    <item name="android:text">@string/_0</item>
    <item name="android:textSize">@dimen/size18</item>
</style>

<style name="textViewStyle3">
    <item name="android:layout_width">@dimen/dimen204</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/dimen16</item>
    <item name="android:layout_marginRight">@dimen/dimen16</item>
    <item name="android:background">@drawable/rounded_corner</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/dimen8</item>
    <item name="android:text">@string/yellow_cards</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/black</item>
</style>

<style name="resetButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/dimen48</item>
    <item name="android:text">@string/reset_score</item>
    <item name="android:textSize">@dimen/size20</item>
</style>
</resources>
