<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.android.courtcounter.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layoutMargin1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:layout_weight="1"
                    android:background="@color/homeColor"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:layout_weight="0"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/vs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/layoutMargin1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:layout_weight="1"
                    android:background="@color/visitorColor"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/visitor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/width1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/layoutMargin1"
                        android:onClick="addOnePointToHome"
                        android:text="@string/plus" />

                    <TextView
                        android:id="@+id/home_score"
                        android:layout_width="@dimen/textViewWidth1"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_sets_won"
                        android:layout_width="@dimen/dimen1"
                        android:layout_height="@dimen/textViewHeight"
                        android:background="@color/homeColor"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize3" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="addOneToSetsWonForHome"
                        android:text="@string/plus" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/visitor_sets_won"
                        android:layout_width="@dimen/dimen1"
                        android:layout_height="@dimen/textViewHeight"
                        android:background="@color/visitorColor"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize3" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="addOneToSetsWonForVisitor"
                        android:text="@string/plus" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/visitor_score"
                        android:layout_width="@dimen/textViewWidth1"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize2" />


                    <Button
                        android:layout_width="@dimen/width1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/layoutMargin1"
                        android:onClick="addOnePointToVisitor"
                        android:text="@string/plus" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layoutMargin1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/home_score_set1"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/homeColor"
                    android:gravity="center"
                    android:onClick="addOneToHomeSet1"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/home_score_set2"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layoutMargin7"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/homeColor"
                    android:gravity="center"
                    android:onClick="addOneToHomeSet2"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/home_score_set3"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layoutMargin2"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/homeColor"
                    android:gravity="center"
                    android:onClick="addOneToHomeSet3"
                    android:text="@string/plus" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutMargin1"
                android:layout_marginRight="@dimen/layoutMargin1"
                android:background="@color/black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin"
                    android:text="@string/set_1"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin8"
                    android:text="@string/set_2"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin9"
                    android:text="@string/set_3"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/visitor_score_set1"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:background="@color/visitorColor"
                    android:gravity="center"
                    android:onClick="addOneToVisitorSet1"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/visitor_score_set2"
                    android:layout_width="@dimen/width1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin7"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3"

                    />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:background="@color/visitorColor"
                    android:gravity="center"
                    android:onClick="addOneToVisitorSet2"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/visitor_score_set3"
                    android:layout_width="@dimen/width1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin2"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3"

                    />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:background="@color/visitorColor"
                    android:gravity="center"
                    android:onClick="addOneToVisitorSet3"
                    android:text="@string/plus" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layoutMargin5"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/home_score_set4"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layoutMargin6"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/homeColor"
                    android:gravity="center"
                    android:onClick="addOneToHomeSet4"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/home_score_set5"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layoutMargin10"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:layout_marginTop="@dimen/layoutMargin1"
                    android:background="@color/homeColor"
                    android:gravity="center"
                    android:onClick="addOneToHomeSet5"
                    android:text="@string/plus" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutMargin1"
                android:layout_marginRight="@dimen/layoutMargin1"
                android:background="@color/black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin7"
                    android:text="@string/set_4"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin11"
                    android:text="@string/set_5"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/visitor_score_set4"
                    android:layout_width="@dimen/width1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layoutMargin6"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3" />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:background="@color/visitorColor"
                    android:gravity="center"
                    android:onClick="addOneToVisitorSet4"
                    android:text="@string/plus" />

                <TextView
                    android:id="@+id/visitor_score_set5"
                    android:layout_width="@dimen/width1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layoutMargin10"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize3"

                    />

                <Button
                    android:layout_width="@dimen/width1"
                    android:layout_height="@dimen/buttonHeight1"
                    android:background="@color/visitorColor"
                    android:gravity="center"
                    android:onClick="addOneToVisitorSet5"
                    android:text="@string/plus" />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/ResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/layoutMargin1"
            android:onClick="resetScore"
            android:text="@string/reset" />


    </RelativeLayout>

</ScrollView>
